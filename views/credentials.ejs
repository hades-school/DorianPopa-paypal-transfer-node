<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./layout/head") %>
  </head>
  <body>
    <%- include("./layout/header") %>

    <div class="container">
      <h1>PayPal Credentials</h1>
      <div class="d-flex justify-content-center mt-3">
        <div class="">
          <p><b>Paypal Balance</b></p>
          <h3>$ <span id="total-balance">23,394,552</span></h3>
          <p>Estimated total of all curriences</p>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <form
          action="/credentials"
          method="POST"
          class="col-lg-6 col-md-8 col-sm-11"
        >
          <label for="client_id">Client ID:</label>
          <input
            type="text"
            id="client_id"
            name="client_id"
            class="form-control"
            required
          />
          <br /><br />
          <label for="client_secret">Client Secret:</label>
          <input
            type="password"
            id="client_secret"
            name="client_secret"
            class="form-control"
            required
          />
          <br /><br />
          <input type="submit" value="Save Credentials" />
        </form>
      </div>
    </div>

    <%- include("./layout/foot") %>
  </body>
</html>
